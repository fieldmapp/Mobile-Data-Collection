<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DLR_Data_App.Views.Settings.SettingsPage"
             xmlns:local="clr-namespace:DLR_Data_App.Views.Settings"
             xmlns:res="clr-namespace:DlrDataApp.Modules.Base.Shared.Localization;assembly=DlrDataApp.Modules.Base.Shared"
             xmlns:vm="clr-namespace:DLR_Data_App.ViewModels.Settings"
            Title="{Binding Title}">

    <TabbedPage.BindingContext>
        <vm:SettingsViewModel />
    </TabbedPage.BindingContext>

    <local:AppSettings Title="{res:Translate general}"/>
    <local:ProfileListPage Title="{res:Translate profile}"/>
    <local:SensorListPage Title="{res:Translate sensors}"/>
        
</TabbedPage>