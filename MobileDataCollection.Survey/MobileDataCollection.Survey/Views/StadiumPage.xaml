            <Grid Grid.Row="2" VerticalOptions="EndAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Abbrechen"
                        BackgroundColor="{StaticResource Button}"
                        TextColor="White"/>
                <Button Grid.Column="1"
                        Text="Weiter"
                        BackgroundColor="{StaticResource Button}"
                        TextColor="White" />
            </Grid>
        </StackLayout>
    </ScrollView>
