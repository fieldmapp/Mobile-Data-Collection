<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDataCollection.Survey.Views.StadiumPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Button">Gray</Color>
            <Color x:Key="Selection">ForestGreen</Color>
            <Color x:Key="Selection2">Lime</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Margin="10,35,10,10"
                 Padding="20">
        <Label Text="Frage X" FontSize="Large" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Item.Text}" FontSize="Small"/>
        <Label Text="Ordnen Sie dem Bild eine Feldfruchtsorte und das Stadium/die Stadien der Entwicklung zu." FontSize="Large" />
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
        <Grid RowSpacing="30" HorizontalOptions="CenterAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="145"/>
            </Grid.RowDefinitions>
            <!--<Image Source="C:\Users\PC\source\repos\Design\Design\Design\Bilder\pflanze1.PNG"/>-->

            <Grid HorizontalOptions="Center" Grid.Row="1" ColumnSpacing="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="170"/>
                </Grid.ColumnDefinitions>
                <Grid RowSpacing="15"
                  VerticalOptions="StartAndExpand" 
                  HorizontalOptions="StartAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Label VerticalOptions="Center" Text="1" />
                    <Label Grid.Column="1" VerticalOptions="Center" Text="Blattentwicklung"/>
                    <Image Grid.Column="2" VerticalOptions="Center" Source="C:\Users\PC\source\repos\Design\Design\Design\Bilder\stadium1.PNG"/>
                    <Label Grid.Row="1" VerticalOptions="Center" Text="2" />
                    <Label Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Text="Bestockung"/>
                    <Image Grid.Row="1" Grid.Column="2" Source="C:\Users\PC\source\repos\Design\Design\Design\Bilder\stadium2.PNG"/>
                    <Label Grid.Row="2" VerticalOptions="Center" Text="3" />
                    <Label Grid.Row="2" Grid.Column="1" VerticalOptions="Center" Text="Längenwachstum/Schossen"/>
                    <Image Grid.Row="2" Grid.Column="2" Source="C:\Users\PC\source\repos\Design\Design\Design\Bilder\stadium3.PNG"/>
                </Grid>
                <Grid Grid.Column="1" RowSpacing="5"
                  VerticalOptions="Center" 
                  HorizontalOptions="StartAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Button Text="A  Kartoffel" 
                            HorizontalOptions="Start" WidthRequest="150"
                            BorderColor="LightGray" BorderWidth="3"
                            BackgroundColor="Transparent"  />
                    <Button Grid.Row="1" Text="B  Mais" 
                            HorizontalOptions="Start" WidthRequest="150"
                            BorderColor="LightGray" BorderWidth="3"
                            BackgroundColor="Transparent"  />
                    <Button Grid.Row="2" Text="C  Weizen" 
                            HorizontalOptions="Start" WidthRequest="150"
                            BorderColor="DarkSeaGreen" BorderWidth="3"
                            BackgroundColor="Transparent"  />
                    <Button Grid.Row="3" Text="D  Zuckerrübe" 
                            HorizontalOptions="Start" WidthRequest="150"
                            BorderColor="LightGray" BorderWidth="3"
                            BackgroundColor="Transparent"  />
                </Grid>
            </Grid>
        </Grid>

        <Grid VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Abbrechen"
                    BackgroundColor="{StaticResource Button}"
                    TextColor="White"/>
            <Button Grid.Column="1"
                    Text="Weiter"
                    BackgroundColor="{StaticResource Button}"
                    TextColor="White" />
        </Grid>
    </StackLayout>
</ContentPage>