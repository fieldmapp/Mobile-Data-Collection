<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDataCollection.Survey.Views.ImageCheckerPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Button">Gray</Color>
            <Color x:Key="Selection">Green</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            <Color x:Key="NonSelection">White</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Margin="5,35,5,5"
                 Padding="10">
        <Label x:Name="NummerFrage"
               Text="Frage X"
               FontSize="Large"
               HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Item.Text}"
               FontSize="Small"/>
        <Label x:Name="Frage"
               HorizontalTextAlignment="Center"
               Text="Wo sehen Sie die Feldfruchtsorte Weizen abgebildet?"
               FontSize="Large" />
        <Label Text="{Binding Item.Description}"
               FontSize="Small"/>
        <Grid ColumnSpacing="10"
              RowSpacing="0"
              VerticalOptions="CenterAndExpand" 
              HorizontalOptions="CenterAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition Height="170" />
            </Grid.RowDefinitions>
            <ImageButton x:Name="PictureA"
                         Source=""
                         HeightRequest="160"
                         WidthRequest="160"
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"
                         IsEnabled="true"
                         Pressed="PressPicture"
                         Released="ReleasePicture"
                         BorderColor="White"
                         BorderWidth="5"/>
            <ImageButton x:Name="PictureB"
                         Source=""
                         Grid.Column="1"
                         HeightRequest="160"
                         WidthRequest="160"
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"
                         IsEnabled="true"
                         Pressed="PressPicture"
                         Released="ReleasePicture"
                         BorderColor="White"
                         BorderWidth="5"/>
            <ImageButton x:Name="PictureC"
                         Source=""
                         Grid.Row="1" 
                         HeightRequest="160"
                         WidthRequest="160"
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"
                         IsEnabled="true"
                         Pressed="PressPicture"
                         Released="ReleasePicture"
                         BorderColor="White"
                         BorderWidth="5"/>
            <ImageButton x:Name="PictureD"
                         Source=""
                         Grid.Row="1"
                         Grid.Column="1"
                         HeightRequest="160"
                         WidthRequest="160"
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"
                         IsEnabled="true"
                         Pressed="PressPicture"
                         Released="ReleasePicture"
                         BorderColor="White"
                         BorderWidth="5"/>
        </Grid>
        <Grid VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="SpeichernButton"
                    Text="Speichern"
                    BackgroundColor="{StaticResource Button}"
                    TextColor="White"
                    Clicked="OnSpeicherButtonClicked" />
            <Button x:Name="WeiterButton"
                    Grid.Column="1"
                    Text="Weiter"
                    BackgroundColor="{StaticResource Button}"
                    TextColor="White"
                    Clicked="OnWeiterButtonClicked"/>
        </Grid>
    </StackLayout>
</ContentPage>
